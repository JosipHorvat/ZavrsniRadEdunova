<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
        
       <!-- 
POTREBNO JE RUCNO KREIRATI BAZU
        drop database zavrsni_rad_prijevoz_putnika_horvat;
       create database zavrsni_rad_prijevoz_putnika_horvat default character set utf8mb4;
       use zavrsni_rad_prijevoz_putnika_horvat;;


        -->
        
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/zavrsni_rad_prijevoz_putnika_horvat?useSSL=false</property>
        <property name="connection.username">edunova</property>
        <property name="connection.password">edunova</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">5</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <!-- 
            validate: validate the schema, makes no changes to the database.
            update: update the schema.
            create: creates the schema, destroying previous data.
            create-drop: drop the schema at the end of the session. 
            1. puta create-drop, poslije update
            -->
        <property name="hbm2ddl.auto">create-drop</property>
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        
        
        <!-- Ovdje navodimo naÅ¡e mapirane klase -->
          <mapping class="hr.edunova.horvat.model.Vozac" />
           <mapping class="hr.edunova.horvat.model.Vozilo" />
        <mapping class="hr.edunova.horvat.model.Prijevoz" />
        <mapping class="hr.edunova.horvat.model.Proizvodjac" />
        

        
    </session-factory>
</hibernate-configuration>